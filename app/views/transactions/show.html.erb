<div class="">

<% if @transactions_per_group.empty? %>
<p>No transactions available.</p>
<% else %>
  <h1>Category Name: <%= @category_name %></h1>
  <p>Sum of transactions: <%= @sum %></p>
    <% @transactions_per_group.each do |tx| %>
      <p>
        <%= tx.name %>
      </p>

      <p>
        <%= tx.amount %>
      </p>
    <% end %>
  <% end %>

  <%= link_to "Back to transactions", user_transactions_path(current_user) %>
</div>